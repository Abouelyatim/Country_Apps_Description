<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CountryActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/country_view_pager"
            android:layout_width="match_parent"
            android:layout_height="275sp">
        </androidx.viewpager.widget.ViewPager>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="45dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/country_name"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:layout_marginStart="26sp"
                android:text="Algeria"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/holo_green_dark"/>

            <androidx.cardview.widget.CardView
                android:layout_width="70sp"
                android:layout_height="45sp"
                android:layout_marginEnd="20sp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"

                android:backgroundTint="@android:color/holo_green_dark">



                    <ImageView
                        android:id="@+id/country_flag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="1"
                        android:contentDescription="TODO" />




            </androidx.cardview.widget.CardView>

        </LinearLayout>


<!--        Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="Description"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:id="@+id/country_description"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginHorizontal="7sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a description..."
                android:textColor="#777777"
                android:lineSpacingExtra="7sp"
                android:layout_gravity="left"/>

        </LinearLayout>
<!--        Surface -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="Surface"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:id="@+id/country_surface"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.985 million km²"
                android:textColor="#777777"
                android:textSize="18sp"
                android:layout_gravity="left"/>

        </LinearLayout>
<!--        Population -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="Population"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:id="@+id/country_population"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40.5 million (2019)"
                android:textColor="#777777"
                android:layout_gravity="left"/>

        </LinearLayout>
<!--        Main Resources -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="Pricipales Ressources"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petrol"
                android:textColor="#777777"
                android:layout_gravity="left"/>

        </LinearLayout>
<!--        Main Personalities -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="Principales Personnalités"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algerian"
                android:textColor="#777777"
                android:layout_gravity="left"/>

        </LinearLayout>


<!--        l’hymne national -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="center"
            >

            <View android:background="@android:color/holo_green_dark"
                android:layout_width="5sp"
                android:layout_height="40dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="8sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5sp"
                android:paddingLeft="12sp"
                android:text="L’hymne National"
                android:textColor="#5E5E5E"
                android:layout_gravity="left"/>

        </LinearLayout>
<!--        Media Player-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20sp"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/pauseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/playBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12sp"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/stopBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:src="@drawable/ic_stop_black_24dp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/youtube_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12sp"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:listitem="@layout/youtube_video_item"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/twitter_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12sp"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:listitem="@layout/youtube_video_item"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressBar_loading"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:indeterminate="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>